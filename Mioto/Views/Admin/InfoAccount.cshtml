@{
    ViewBag.Title = "InfoAccount";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{var nhanvien = Session["NhanVien"] as Mioto.Models.NhanVien;}
@{var quanly = Session["QuanLy"] as Mioto.Models.NhanVien;}

<!-- User profile -->
<div class="content-item user-profile">
    <div class="title">
        <div class="title-edit">
            <h5>Thông tin tài khoản</h5>
        </div>
    </div>

    @if (nhanvien != null)
    {
        <div class="content">
            <div class="avatar-box">
                <form action="@Url.Action("ChangeAvatarUser", "Admin")" method="post" enctype="multipart/form-data">
                    <div class="avatar avatar--xl has-edit" onclick="document.getElementById('avatarUpload').click();">
                        <img id="avatarImg" loading="lazy" src="@Url.Content("~/AvatarAdmin/" + (nhanvien.HinhAnh ?? "DefaultAvatar.jpg"))" alt="@nhanvien.Ten">
                        <input type="file" name="avatar" id="avatarUpload" accept="image/*" style="display: none;" onchange="this.form.submit();">
                    </div>
                </form>
                <h6>@nhanvien.Ten</h6>
            </div>

            <div class="info-user">
                <div class="info-box">
                    <div class="info-box__item">
                        <p>Ngày sinh </p>
                        <p class="main">@nhanvien.NgaySinh.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="info-box__item">
                        <p>Giới tính </p>
                        <p class="main">@nhanvien.GioiTinh</p>
                    </div>
                </div>
                <div class="info-desc">
                    <div class="info-desc__item">
                        <div class="title-item">Số điện thoại</div>
                        <div class="name">@nhanvien.SDT</div>
                    </div>
                    <div class="info-desc__item">
                        <div class="title-item">Email</div>
                        <div class="name">@nhanvien.Email</div>
                    </div>
                    <div class="info-desc__item">
                        <div class="title-item">Địa chỉ</div>
                        <div class="name">@nhanvien.DiaChi</div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (quanly != null)
    {
        <div class="content">
            <div class="avatar-box">
                <form action="@Url.Action("ChangeAvatarUser", "Admin")" method="post" enctype="multipart/form-data">
                    <div class="avatar avatar--xl has-edit" onclick="document.getElementById('avatarUpload').click();">
                        <img id="avatarImg" loading="lazy" src="@Url.Content("~/AvatarAdmin/" + (quanly.HinhAnh ?? "DefaultAvatar.jpg"))" alt="@quanly.Ten">
                        <input type="file" name="avatar" id="avatarUpload" accept="image/*" style="display: none;" onchange="this.form.submit();">
                    </div>
                </form>
                <h6>@quanly.Ten</h6>
            </div>

            <div class="info-user">
                <div class="info-box">
                    <div class="info-box__item">
                        <p>Ngày sinh </p>
                        <p class="main">@quanly.NgaySinh.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="info-box__item">
                        <p>Giới tính </p>
                        <p class="main">@quanly.GioiTinh</p>
                    </div>
                </div>
                <div class="info-desc">
                    <div class="info-desc__item">
                        <div class="title-item">Số điện thoại</div>
                        <div class="name">@quanly.SDT</div>
                    </div>
                    <div class="info-desc__item">
                        <div class="title-item">Email</div>
                        <div class="name">@quanly.Email</div>
                    </div>
                    <div class="info-desc__item">
                        <div class="title-item">Địa chỉ</div>
                        <div class="name">@quanly.DiaChi</div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="content">
            <p>Không tìm thấy thông tin tài khoản.</p>
        </div>
    }
</div>
