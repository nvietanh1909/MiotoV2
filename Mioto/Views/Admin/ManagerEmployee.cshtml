@model IEnumerable<Mioto.Models.NhanVien>
@{
    ViewBag.Title = "ManagerEmployee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/css/table.css" rel="stylesheet" />

<div class="title" style="display: flex; justify-content: space-between">
    <div class="title-item">
        <h5>Danh sách nhân viên</h5>
    </div>
    <a href="@Url.Action("CreateEmployee", "Admin")" class="btn btn-primary" style="font-weight: 300;">Thêm nhân viên</a>
</div>

@if (Model.Any())
{
    <div class="table100 ver2 m-b-110">
        <table data-vertable="ver2">
            <thead>
                <tr class="row100 head" style="color: white; font-weight: 500;">
                    <th class="column100 column1">Tên</th>
                    <th class="column100 column2">Email</th>
                    <th class="column100 column3">Chức vụ</th>
                    <th class="column100 column4">Mật khẩu</th>
                    <th class="column100 column5">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="row100">
                        <td class="column100 column1">@item.Ten</td>
                        <td class="column100 column2">@item.Email</td>
                        <td class="column100 column3">@item.ChucVu</td>
                        <td class="column100 column4">@item.MatKhau</td>
                        <td class="column100 column5">
                            @Html.ActionLink("Sửa", "EditEmployee", new { id = item.IDNV }, new { @class = "btn btn-efit" })
                            @Html.ActionLink("Xóa", "DeleteEmployee", new { id = item.IDNV }, new
                            {
                                @class = "btn btn-delete",
                                onclick = "return confirm('Hành động này không thể khôi phục. Tiếp tục?');"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-container">
        <img loading="lazy" src="https://www.mioto.vn/static/media/empty-trip.8f191e42.svg" alt="No employees" />
        <p>Không có nhân viên nào trong danh sách.</p>
    </div>
}
