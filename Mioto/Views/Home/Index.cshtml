@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="btn btn-primary" onclick="location.href = '@Url.Action("OauthRedirect", "Payment")'">Sign In</button>
<button class="btn btn-primary" onclick="location.href = '@Url.Action("RefreshToken", "OAuth")'">Refresh Access Token</button>
<button class="btn btn-primary" onclick="location.href = '@Url.Action("RevokeToken", "OAuth")'">Revoke Access Token</button>

<form action="@Url.Action("CreateEvent", "CalendarEvent")" method="post">
    <div class="row" style="margin: 10px">
        <label for="Summary" class="col-sm-3">Summary:</label>
        <input type="text" class="col-sm-1 form-control" name="Summary" value="" autocomplete="off" />
    </div>

    <div class="row" style="margin: 10px">
        <label for="Description" class="col-sm-3">Description:</label>
        <input type="datetime" class="col-sm-1 form-control" name="Description" value="" autocomplete="off" />
    </div>

    <div class="row" style="margin: 10px">
        <label for="Start.DateTime" class="col-sm-3">Start Date Time:</label>
        <input type="datetime" class="col-sm-1 form-control" name="Start.DateTime" value="" autocomplete="off" />
    </div>


    <div class="row" style="margin: 10px">
        <label for="End.DateTime" class="col-sm-3">End Date Time:</label>
        <input type="text" class="col-sm-1 form-control" name="End.DateTime" value="" autocomplete="off" />
    </div>

    <div class="row col-sm-3" style="margin: 10px">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>