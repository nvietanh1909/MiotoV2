
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
@model Mioto.Models.Xe

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang chủ</title>
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <!--Link fontawesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <style>
        .item-car {
            cursor: pointer;
        }
    </style>
    <!--Body-->
    <section class="body">
        <!--Banner-->
        <div class="banner-section">
            <div class="m-container">
                <div class="background space ec" style="background-image: url(/Image/intro-image.png)">
                    <h1>Mioto - Cùng Bạn Đến Mọi Hành Trình</h1>
                    <div class="line-bg"></div>
                    <h6 class="text-white">
                        Trải nghiệm sự khác biệt từ
                        <span class="text-primary">hơn 8000</span>
                        xe gia đình đời mới khắp Việt Nam
                    </h6>
                </div>
            </div>
            <div class="search-option" style=" margin-top: 50px;">
                @using (Html.BeginForm("Car", "Home", FormMethod.Get))
                {
                    <div class="search">
                        <div class="search-form sd">
                            <div class="search-form__item address" style=" max-width: 1200px; ">
                                <div class="title">
                                    <div class="wrap-svg">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12 2.75C8.31 2.75 5.3 5.76 5.3 9.45C5.3 14.03 11.3 20.77 11.55 21.05C11.79 21.32 12.21 21.32 12.45 21.05C12.71 20.77 18.7 14.03 18.7 9.45C18.7 5.76 15.69 2.75 12 2.75Z" stroke="#767676" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                            <path d="M12.3849 11.7852C13.6776 11.5795 14.5587 10.3647 14.3529 9.07204C14.1472 7.77936 12.9325 6.89824 11.6398 7.104C10.3471 7.30976 9.46597 8.52449 9.67173 9.81717C9.87749 11.1099 11.0922 11.991 12.3849 11.7852Z" stroke="#767676" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                        </svg>
                                    </div>
                                    <p>Địa điểm</p>
                                </div>

                                <div class="choose">
                                    <div class="choose-item has-arrow" for="1">
                                        <div class="here-autocomplete">
                                            <div class="wrap-input">
                                                @Html.DropDownListFor(model => model.KhuVuc, (IEnumerable<SelectListItem>)ViewBag.TinhThanhPho, "Chọn...", new { @class = "form-control select-dropdown", style = "font-size: 16px; width: 100%;" })
                                                @Html.ValidationMessageFor(model => model.KhuVuc, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary search-btn">Tìm Xe</button> <!-- Thay thế a tag bằng button để submit form -->
                        </div>
                    </div>
                }


            </div>
        </div>
        <!--Tour-->
        <div class="topdes-section space sec">
            <div class="m-container">
                <h2>Địa Điểm Nổi Bật</h2>
            </div>
            <div class="m-container">
                <div class="m-container airport">
                    <h4 class="airport-head">Giao xe tại sân bay</h4>
                    <div class="swiper swiper-topdes-airport swiper-initialized swiper-horizontal swiper-pointer-events swiper-backface-hidden">
                        <div class="swiper-wrapper" style="transform: translate3d(0px, 0px, 0px);">
                            <div class="swiper-slide swiper-slide-active" style="width: 255px; margin-right: 20px;">
                                <a>
                                    <div class="airport-item">
                                        <div class="fix-img">
                                            <img loading="lazy" src="https://n1-cstg.mioto.vn/g/2022/04/14/17/NGXIIKNY.jpg" alt="Cho thuê xe tự lái Tân Sơn Nhất">
                                        </div>
                                        <p>Tân Sơn Nhất </p>
                                        <span>1000+ xe</span>
                                    </div>
                                </a>
                            </div>
                            <div class="swiper-slide swiper-slide-next" style="width: 255px; margin-right: 20px;">
                                <a>
                                    <div class="airport-item">
                                        <div class="fix-img">
                                            <img loading="lazy" src="https://n1-cstg.mioto.vn/g/2022/04/14/17/HU5WFGGX.jpg" alt="Cho thuê xe tự lái Nội Bài">
                                        </div>
                                        <p>Nội Bài </p>
                                        <span>200+ xe</span>
                                    </div>
                                </a>
                            </div>
                            <div class="swiper-slide" style="width: 255px; margin-right: 20px;">
                                <a>
                                    <div class="airport-item">
                                        <div class="fix-img">
                                            <img loading="lazy" src="https://n1-cstg.mioto.vn/g/2022/04/14/17/ND4NE32Q.jpg" alt="Cho thuê xe tự lái Đà Nẵng">
                                        </div>
                                        <p>Đà Nẵng </p>
                                        <span>100+ xe</span>
                                    </div>
                                </a>
                            </div>
                            <div class="swiper-slide" style="width: 255px; margin-right: 20px;">
                                <a>
                                    <div class="airport-item">
                                        <div class="fix-img">
                                            <img loading="lazy" src="https://n1-cstg.mioto.vn/g/2022/04/14/17/I2C3CQ64.jpg" alt="Cho thuê xe tự lái Cam Ranh">
                                        </div>
                                        <p>Cam Ranh </p>
                                        <span>20+ xe</span>
                                    </div>
                                </a>
                            </div>
                            <div class="swiper-slide" style="width: 255px; margin-right: 20px;">
                                <a>
                                    <div class="airport-item">
                                        <div class="fix-img">
                                            <img loading="lazy" src="https://n1-cstg.mioto.vn/g/2022/04/14/17/IH8BGVXP.jpg" alt="Cho thuê xe tự lái Phú Quốc">
                                        </div>
                                        <p>Phú Quốc </p>
                                        <span>70+ xe</span>
                                    </div>
                                </a>
                            </div>
                            <div class="swiper-slide" style="width: 255px; margin-right: 20px;">
                                <a>
                                    <div class="airport-item">
                                        <div class="fix-img">
                                            <img loading="lazy" src="https://n1-cstg.mioto.vn/g/2022/04/14/17/IJKX9Q3Q.jpg" alt="Cho thuê xe tự lái Liên Khương">
                                        </div>
                                        <p>Liên Khương </p>
                                        <span>30+ xe</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="swiper-pagination pagi-topdes-airport swiper-pagination-clickable swiper-pagination-bullets swiper-pagination-horizontal swiper-pagination-bullets-dynamic" style="width: 40px;">
                            <span class="swiper-pagination-bullet swiper-pagination-bullet-active swiper-pagination-bullet-active-main" style="left: 8px;"></span>
                            <span class="swiper-pagination-bullet swiper-pagination-bullet-active-next" style="left: 8px;"></span>
                            <span class="swiper-pagination-bullet swiper-pagination-bullet-active-next-next" style="left: 8px;"></span>
                        </div>
                    </div>
                    <div class="swiper-button-prev topdes-airport-prev swiper-button-disabled">
                        <i class="fa-solid fa-angle-left" style="color: black"></i>
                    </div>
                    <div class="swiper-button-next">
                        <i class="fa-solid fa-chevron-right" style="color: black"></i>
                    </div>
                </div>

            </div>
        </div>
        <!--FeaturesSection-->
        <div class="features-section space sec">
            <div class="m-container">
                <h2>Ưu Điểm Của Mioto</h2>
                <h5 class="title">Những tính năng giúp bạn dễ dàng hơn khi thuê xe trên Mioto.</h5>
                <div class="features-container">
                    <div class="features-item pointer">
                        <div class="features-item__img">
                            <img loading="lazy" src="https://www.mioto.vn/static/media/thue_xe_co_tai_xe.a6f7dc54.svg">
                        </div>
                        <h5>Lái xe an toàn cùng Mioto</h5>
                        <p>
                            Chuyến đi trên Mioto được bảo vệ với Gói bảo hiểm thuê xe tự lái từ MIC & VNI.
                            <br />
                            Khách thuê sẽ chỉ bồi thường tối đa 2,000,000VNĐ trong trường hợp có sự cố ngoài ý muốn.
                        </p>
                    </div>
                    <div class="features-item">
                        <div class="features-item__img">
                            <img loading="lazy" src="https://www.mioto.vn/static/media/dich_vu_thue_xe_tu_lai_hanoi.f177339e.svg">
                        </div>
                        <h5>An tâm đặt xe</h5>
                        <p>
                            Không tính phí huỷ chuyến trong vòng 1h sau khi đặt cọc. Hoàn cọc và bồi thường 100% nếu chủ xe huỷ chuyến trong vòng 7 ngày trước chuyến đi.
                        </p>
                    </div>
                    <div class="features-item">
                        <div class="features-item__img">
                            <img loading="lazy" src="https://www.mioto.vn/static/media/cho_thue_xe_tu_lai_tphcm.1e7cb1c7.svg">
                        </div>
                        <h5>Thủ tục đơn giản</h5>
                        <p>
                            Chỉ cần có CCCD gắn chip (Hoặc Passport) & Giấy phép lái xe là bạn đã đủ điều kiện thuê xe trên Mioto.
                        </p>
                    </div>
                    <div class="features-item">
                        <div class="features-item__img">
                            <img loading="lazy" src="https://www.mioto.vn/static/media/cho_thue_xe_tu_lai_hanoi.735438af.svg">
                        </div>
                        <h5>Thanh toán dễ dàng</h5>
                        <p>
                            Đa dạng hình thức thanh toán: ATM, thẻ Visa & Ví điện tử (Momo, VnPay, ZaloPay).
                        </p>
                    </div>
                    <div class="features-item">
                        <div class="features-item__img">
                            <img loading="lazy" src="https://www.mioto.vn/static/media/thue_xe_tu_lai_gia_re_hcm.ffd1319e.svg">
                        </div>
                        <h5>Giao xe tận nơi</h5>
                        <p>
                            Bạn có thể lựa chọn giao xe tận nhà/sân bay... Phí tiết kiệm chỉ từ 15k/km.
                        </p>
                    </div>
                    <div class="features-item">
                        <div class="features-item__img">
                            <img loading="lazy" src="https://www.mioto.vn/static/media/thue_xe_tu_lai_gia_re_hanoi.4035317e.svg">
                        </div>
                        <h5>Dòng xe đa dạng</h5>
                        <p>
                            Hơn 100 dòng xe cho bạn tuỳ ý lựa chọn: Mini, Sedan, CUV, SUV, MPV, Bán tải.
                        </p>
                    </div>
                </div>
            </div>
        </div>
