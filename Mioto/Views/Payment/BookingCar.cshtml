@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            function calculatePrice() {
                var ngayThue = $('#NgayThue').val();
                var ngayTra = $('#NgayTra').val();

                if (ngayThue && ngayTra) {
                    var startDate = new Date(ngayThue);
                    var endDate = new Date(ngayTra);
                    var timeDifference = endDate - startDate;
                    var days = timeDifference / (1000 * 3600 * 24);

                    if (days >= 0) {
                        var giaThuePerDay = @Model.Xe.GiaThue;
                        var totalPrice = (days == 0 ? giaThuePerDay : giaThuePerDay * days);
                        $('#GiaThue').text(totalPrice.toLocaleString('vi-VN') + ' VNĐ');
                        $('input[name="SoTien"]').val(totalPrice);
                    } else {
                        $('#GiaThue').text('Ngày trả phải sau ngày thuê');
                    }
                }
            }

            $('#NgayThue, #NgayTra').change(function () {
                calculatePrice();
            });

            $('#applyDiscount').on('click', function () {
                var discountCode = $('#discountCode').val();
                var totalAmountElement = $('#GiaThue');
                var originalAmount = parseFloat($('input[name="SoTien"]').val());

                $.ajax({
                    url: '@Url.Action("ApplyDiscount", "Payment")',
                    type: 'POST',
                    data: {
                        discountCode: discountCode,
                        SoTien: originalAmount,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            var discountedAmount = response.discountedAmount;
                            var formattedAmount = discountedAmount.toLocaleString('vi-VN') + " VNĐ";
                            totalAmountElement.text(formattedAmount);
                            $('input[name="SoTien"]').val(discountedAmount.toFixed(2));
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi.');
                    }
                });
            });
        });
    </script>
